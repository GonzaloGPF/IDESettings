<templateSet group="user">
  <template name="textfield" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$VALUE$&quot; class=&quot;control-label&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;input id=&quot;$VALUE$&quot; class=&quot;form-control&quot;&gt;&#10;&lt;/div&gt;" description="Form Text field" toReformat="true" toShortenFQNames="true">
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="passfield" value="&lt;!-- $VALUE$ input field --&gt;&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    {{ Form::label('$NAME$', '$VALUE$:', ['class' =&gt; 'control-label']) }}&#10;    {{ Form::password('$NAME$', ['class' =&gt; 'form-control']) }}&#10;&lt;/div&gt;" description="Form Password field" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="submit" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    {{ Form::submit('$NAME$', ['class' =&gt; 'btn btn-primary']) }}&#10;&lt;/div&gt;" description="Submit Button" toReformat="false" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="formopen" value="{{ Form::open(['url' =&gt; '$URL$']) }}&#10;&#10;{{ Form::close() }}" description="Laravel Form" toReformat="false" toShortenFQNames="true">
    <variable name="URL" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
</templateSet>